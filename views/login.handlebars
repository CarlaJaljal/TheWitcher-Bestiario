            <p class="message-{{message.class}}">{{message.text}}</p>
            {{/if}}
        </div>
        <div class="login">
            <a href="#" onclick="goBack();return false;">Volver</a>
        </div>
        <script src="/js/bestia.js"></script>
    </div>